<!doctype html>
<html lang="{{ metadata.language }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title or metadata.title }}</title>

        {% include "src/_includes/layouts/embed.njk" %}

        {% getBundle "html", "head" %}
        {% getStyleBundle "css" %}

        <link rel="stylesheet" href="/page.css"/>
        <link rel="stylesheet" href="/assets/prism/prism-tomorrow.min.css"/>
    </head>
    <body>
        <header>
            {% include "src/_includes/layouts/nav.njk" %}
        </header>

        <div class="section p-0-touch p4-mid break-word">
            <div class="columns is-gapless is-desktop">
                <div id="sidebar-menu" class="column is-2-fullhd is-3-widescreen is-3-desktop is-hidden-touch">
                    {% include "src/_includes/layouts/sidebar.njk" %}
                </div>
                <div class="column is-8-fullhd is-9-widescreen is-9-desktop mt-4-touch">
                    <div class="section py-0">
                        <div class="content">
                            {{ content | safe }}
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <script>{% getBundle "js" %}</script>
        <script type="module">{% getBundle "js", "module" %}</script>
    </body>
</html>
