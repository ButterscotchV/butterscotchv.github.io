{% html "head" %}<link rel="stylesheet" href="/assets/ps/photoswipe.css">{% endhtml %}
{% js %}{% include "src/_includes/photoswipe-init.js" %}{% endjs %}

{% macro image(url, width, height, thumb_width, thumb_url="", alt="") %}
<a class="no-decoration" href="{{ url }}" data-pswp-width="{{ width }}" data-pswp-height="{{ height }}" target="_blank">
    <img class="image" src="{% if thumb_url %}{{ thumb_url }}{% else %}{{ url }}{% endif %}"{% if thumb_width %} width="{{ thumb_width }}"{% endif %}{% if alt %} alt="{{ alt }}"{% endif %}/>
</a>
{% endmacro %}
